<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="286dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Movie Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_name"
        app:layout_constraintStart_toEndOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="93dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:text="Movie Name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/editText_cast"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cast"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2_cast"
        app:layout_constraintStart_toStartOf="@+id/edittext_name" />

    <TextView
        android:id="@+id/textView2_cast"
        android:layout_width="91dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Cast"
        app:layout_constraintStart_toStartOf="@+id/textView_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <EditText
        android:id="@+id/edittext_disp"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Disp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3_disp"
        app:layout_constraintStart_toStartOf="@+id/editText_cast" />

    <TextView
        android:id="@+id/textView3_disp"
        android:layout_width="91dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="Disp"
        app:layout_constraintStart_toStartOf="@+id/textView2_cast"
        app:layout_constraintTop_toBottomOf="@+id/textView2_cast" />

    <Button
        android:id="@+id/add_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Add Movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_disp" />

    <Button
        android:id="@+id/show_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Show Movie"
        app:layout_constraintBottom_toBottomOf="@+id/add_movie"
        app:layout_constraintStart_toEndOf="@+id/add_movie"
        app:layout_constraintTop_toTopOf="@+id/add_movie"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/delete_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Delete Movie"
        app:layout_constraintBottom_toBottomOf="@+id/show_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_movie"
        app:layout_constraintTop_toTopOf="@+id/show_movie" />

    <Button
        android:id="@+id/update_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_movie"
        tools:layout_editor_absoluteX="161dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="ID"
        app:layout_constraintStart_toStartOf="@+id/textView3_disp"
        app:layout_constraintTop_toBottomOf="@+id/textView3_disp" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="262dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ID"
        app:layout_constraintStart_toStartOf="@+id/edittext_disp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_disp" />

</androidx.constraintlayout.widget.ConstraintLayout>