<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <ImageView
        android:id="@+id/display"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/nameview"
        android:layout_width="378dp"
        android:layout_height="67dp"
        android:layout_below="@+id/display"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="52dp"
        android:text="@string/name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/castView"
        android:layout_width="183dp"
        android:layout_height="264dp"
        android:layout_alignEnd="@+id/nameview"
        android:layout_alignRight="@+id/nameview"
        android:layout_alignBottom="@+id/nameview"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="78dp"
        android:layout_toEndOf="@+id/display"
        android:padding="10dp"
        android:layout_toRightOf="@+id/display"
        android:text="CAST" />

    <TextView
        android:id="@+id/dispView"
        android:layout_width="370dp"
        android:layout_height="297dp"
        android:layout_below="@+id/nameview"
        android:layout_alignStart="@+id/nameview"
        android:layout_alignLeft="@+id/nameview"
        android:layout_alignEnd="@+id/nameview"
        android:layout_alignRight="@+id/nameview"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="63dp"
        android:padding="10dp"
        android:text="DISP"
        android:textSize="14sp" />

</RelativeLayout>